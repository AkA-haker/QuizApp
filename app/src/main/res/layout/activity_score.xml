<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_score_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_correct_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4dff4d"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_view_correct_ans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_view_result_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textSize="25sp"
                tools:text="0" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_werong_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_correct_score"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff5c33"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_view_wrong_ans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong answer:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_view_wrong_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:text="0" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_final_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_werong_score"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff33"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_view_final_ans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong answer:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_view_final_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:text="0" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_final_score"
        android:layout_marginTop="150dp"
        android:text="restart" />


</RelativeLayout>